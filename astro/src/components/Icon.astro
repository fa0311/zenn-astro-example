---
import { astroURL } from "../lib/url";
import { type Topic } from "../lib/zenn";

interface Props {
  topic: Topic;
}

const { topic } = Astro.props;
---

<img src={astroURL(Astro).file(`/assets/icons/${topic.path}`).pathname} alt={topic.displayName} />

<style>
  img {
    width: 100%;
    height: 100%;
  }
</style>
