---
import { GoogleAnalytics } from "astro-google-analytics";
interface Props {
  title: string;
  keywords: string[];
  url?: URL;
  ogp?: URL;
  description?: string;
  robots?: string;
  canonical?: URL;
}

import Emoji from "../components/Emoji.astro";
import Feed from "../components/icon/Feed.astro";
import Github from "../components/icon/Github.astro";
import Twitter from "../components/icon/Twitter.astro";
import { astroURL } from "../lib/url";

const { title, description, keywords, ogp, robots, canonical, url } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href={`${astroURL(Astro).file("/favicon.ico")}`} />
    <meta name="generator" content={Astro.generator} />
    {description && <meta name="description" content={description} />}
    <meta name="keywords" content={keywords.join(",")} />
    <meta property="og:type" content={ogp ? "article" : "website"} />
    <meta property="og:site_name" content={import.meta.env.SITE_NAME} />
    <meta property="twitter:card" content={ogp ? "summary_large_image" : "summary"} />
    <meta property="og:url" content={url ?? astroURL(Astro).url} />
    <meta property=" og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content="ja_JP" />
    <GoogleAnalytics id={import.meta.env.GA_MEASUREMENT_ID} />
    {ogp && <meta property="og:image" content={ogp.href} />}
    {robots && <meta name="robots" content={robots} />}
    <link rel="canonical" href={canonical ?? url ?? astroURL(Astro).url} />
    <link rel="sitemap" type="application/xml" href=`${ astroURL(Astro).file("/sitemap-index.xml")}` />

    <title>{title}</title>
  </head>

  <body>
    <header>
      <aside class="site-header">
        <nav>
          <a href=`${import.meta.env.BASE_URL}` class="site-logo">
            <div class="site-icon">
              <Emoji emoji={import.meta.env.SITE_ICON} />
            </div>
            <p class="site-name">{import.meta.env.SITE_NAME}</p>
          </a>
          <div class="site-nav">
            <a href="https://github.com/fa0311" target="_blank">
              <div class="external-icon">
                <Github />
              </div>
            </a>
            <a href="https://twitter.com/faa0311" target="_blank">
              <div class="external-icon">
                <Twitter />
              </div>
            </a>
            <a href={astroURL(Astro).file("/feed.xml")} target="_blank">
              <div class="external-icon">
                <Feed />
              </div>
            </a>
          </div>
        </nav>
      </aside>
    </header>
    <slot />

    <footer>
      <div class="site-footer">
        <p>Â© {new Date().getFullYear()} {astroURL(Astro).url.hostname}</p>
      </div>

      <style>
        html {
          height: 100%;
          font-family: "Meiryo", "sans-serif", "Segoe UI Emoji";
        }

        body {
          height: 100%;
          margin: 0;
          line-height: 1.6;
          background: #edf2f7;
          color: #000000d1;
          word-break: break-word;
          word-wrap: break-word;
          line-break: strict;
        }

        header {
          background: #ffffff;
          padding: 8px 16px;
          top: 0;
          border-bottom: 1px solid #e4edf4;
        }

        @media (max-width: 576px) {
          header {
            padding: 8px;
          }
        }

        footer {
          position: sticky;
          top: 100vh;
          margin: 40px 0 0 0;
          background-color: #f8f9fa;
          padding: 20px 0;
          text-align: center;
        }

        .site-header,
        .site-footer {
          max-width: 1120px;
          margin: 0 auto;
        }

        nav {
          display: flex;
          justify-content: space-between;
          align-items: center;
        }

        .site-logo {
          display: inline-flex;
          padding: 10px;
        }
        .site-icon {
          width: 35px;
          height: 35px;
        }
        .site-name {
          display: inline;
          font-size: 1.5rem;
          font-weight: bold;
          margin: auto 0 auto 10px;
        }

        .site-nav {
          display: flex;
        }

        .external-icon {
          color: #65717b;
          padding: 8px;
          width: 38px;
          height: 38px;
        }
      </style>

      <style is:global>
        a {
          color: #000000d1;
          text-decoration: none;
        }
        ol,
        li {
          list-style-type: none;
          padding: 0;
          margin: 0;
        }

        *,
        :after,
        :before {
          box-sizing: border-box;
        }
      </style>
    </footer>
  </body>
</html>
